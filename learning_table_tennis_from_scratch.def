Bootstrap: localimage
From: pam_mujoco.sif

%post
    git clone https://github.com/intelligent-soft-robots/learning_table_tennis_from_scratch.git
    cd learning_table_tennis_from_scratch
    pip3 install --no-cache-dir .
    cd ..
    rm -rf learning_table_tennis_from_scratch

    # also install cluster_utils for hyperparameter optimisation
    # pip3 install --no-cache-dir -U git+https://gitlab.tuebingen.mpg.de/mrolinek/cluster_utils.git
    # pip3 install --no-cache-dir -U git+https://gitlab.tuebingen.mpg.de/felixwidmaier/cluster_utils.git@fwidmaier/displot
    git clone https://gitlab.tuebingen.mpg.de/felixwidmaier/cluster_utils.git -b fwidmaier/displot
    cd cluster_utils
    pip3 install --no-cache-dir .
    cd ..
    rm -rf cluster_utils
